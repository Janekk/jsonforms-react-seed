{
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "title": "Long Description",
      "type": "string"
    },
    "done": {
      "type": "boolean"
    },
    "due_date": {
      "type": "string",
      "format": "date-time"
    },
    "rating": {
      "type": "integer",
      "maximum": 5
    },
    "recurrence": {
      "type": "string",
      "enum": ["Never", "Daily", "Weekly", "Monthly"]
    },
    "recurrence_interval": {
      "type": "integer",
      "form": {
        "type": "button"
      }
    },
    "payment": {
      "type": "object",
      "readOnly": true,
      "properties": {
        "paid": { "type": "boolean" },
        "charges": {
          "type": "array",
          "readOnly": true,
          "items": {
            "readOnly": true,
            "properties": {
              "amount": { "type": "number" },
              "dispute": { "type": [ "boolean", "null" ] }
            }
          }
        }
      }
    }
  },
  "required": ["name", "due_date"]
}
